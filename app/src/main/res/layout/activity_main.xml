<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/truco"
    >

    <TextView
        android:id="@+id/contaTento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Conta Tento"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="60dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/timeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contaTento"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/nomeA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:singleLine="true"
            android:text="Time A"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/botaoASoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeA"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="+" />

        <TextView
            android:id="@+id/pontoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botaoASoma"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            android:text="X" />

        <Button
            android:id="@+id/botaoAsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pontoA"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="-"/>

        <LinearLayout
            android:id="@+id/botao1TrucoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botaoAsub"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/botao3Asoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+3" />

            <Button
                android:id="@+id/botao6Asoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/botao2TrucoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botao1TrucoA"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/botao9Asoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+9" />

            <Button
                android:id="@+id/botao12Asoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+12" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contaTento"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp">

        <EditText
            android:id="@+id/nomeB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:singleLine="true"
            android:text="Time B"
            android:textAlignment="center" />

        <Button
            android:id="@+id/botaoBSoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeB"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:text="+" />

        <TextView
            android:id="@+id/pontoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botaoBSoma"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            android:text="X" />

        <Button
            android:id="@+id/botaoBSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pontoB"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="-"
            />

        <LinearLayout
            android:id="@+id/botao1TrucoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botaoBSub"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/botao3Bsoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+3" />

            <Button
                android:id="@+id/botao6Bsoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/botao2TrucoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botao1TrucoB"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/botao9Bsoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+9" />

            <Button
                android:id="@+id/botao12Bsoma"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+12" />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/reset"
        android:layout_below="@id/timeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Reiniciar contagem" />

</RelativeLayout>
